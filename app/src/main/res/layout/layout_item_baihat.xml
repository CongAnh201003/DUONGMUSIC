<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp"
    android:background="#2C2C2C"
    android:layout_marginBottom="5dp"
    android:gravity="center_vertical">

    <!-- 1. Ảnh bìa bài hát -->
    <ImageView
        android:id="@+id/imgItemHinh"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher_background" />

    <!-- 2. Thông tin bài hát -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvItemTenBaiHat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên bài hát"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvItemTenCaSi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên ca sĩ"
            android:textColor="#AAAAAA"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvItemTheLoai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thể loại"
            android:textColor="#888888"
            android:textSize="12sp" />
    </LinearLayout>

    <!-- 3. Nút Sửa (MỚI THÊM) -->
    <ImageView
        android:id="@+id/imgEdit"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:padding="5dp"
        android:src="@drawable/baseline_edit_24"
        app:tint="#FFFFFF"
        android:contentDescription="Sửa bài hát" />

    <!-- 4. Nút Xóa (MỚI THÊM) -->
    <ImageView
        android:id="@+id/imgDelete"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:padding="5dp"
        android:layout_marginStart="8dp"
        android:src="@drawable/baseline_delete_24"
        app:tint="#F44336"
        android:contentDescription="Xóa bài hát" />

</LinearLayout>
