<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backapp"
    tools:context=".Activity.TrinhNgheNhacActivity">

    <!-- Phần nội dung chính (Ảnh, tên bài hát, ca sĩ) -->
    <LinearLayout
        android:id="@+id/songInfoLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/controlsWrapper"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgQuayLai"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="start"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/baseline_arrow_back_ios_24"
            android:padding="8dp"/>

        <ImageView
            android:id="@+id/albumArt"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_marginTop="32dp"
            android:src="@drawable/album" />

        <TextView
            android:id="@+id/songTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:gravity="center"
            android:text="Tên bài hát"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/artistName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Tên ca sĩ"
            android:textColor="#B3FFFFFF"
            android:textSize="16sp" />

    </LinearLayout>

    <!-- Phần điều khiển ở dưới -->
    <LinearLayout
        android:id="@+id/controlsWrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- THANH SEEKBAR VÀ THỜI GIAN -->
        <LinearLayout
            android:id="@+id/seekBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/currentTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

            <SeekBar
                android:id="@+id/seekBar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:progressTint="@android:color/white"
                android:thumbTint="@android:color/white" />

            <TextView
                android:id="@+id/totalTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- CÁC NÚT ĐIỀU KHIỂN -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgLapLai"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/baseline_replay_24" />

            <ImageView
                android:id="@+id/imgTuaLai"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="16dp"
                android:src="@drawable/baseline_fast_rewind_24" />

            <ImageView
                android:id="@+id/imgPhatHoacDung"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:src="@drawable/baseline_play_arrow_24" />

            <ImageView
                android:id="@+id/imgTuaToi"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginEnd="16dp"/>

            <!-- Nút này có thể không cần thiết nếu bạn đã có nút lặp lại, tạm ẩn -->
            <ImageView
                android:id="@+id/imgNgauNhien"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:visibility="gone"/>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
