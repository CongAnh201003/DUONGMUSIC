<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    tools:context=".Activity.PhanQuyenActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/backapp"
        android:padding="15dp">
        <ImageView
            android:src="@drawable/baseline_arrow_back_ios_24"
            android:id="@+id/imgQuayLai"
            android:layout_width="40dp"
            android:layout_height="40dp"/>
        <ImageView
            android:id="@+id/imgAnhDaiDien"
            android:src="@drawable/user"
            android:layout_gravity="center_horizontal"
            android:layout_width="150dp"
            android:layout_height="150dp"/>
        <TextView
            android:id="@+id/tvTenNguoiDung"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:text="Họ tên"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvVaiTro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vai Trò"
            android:textColor="#FFFFFF"
            android:textSize="15dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="289dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:paddingStart="16dp"
                android:paddingTop="12dp"
                android:text="Tên đăng nhâp:"
                android:textColor="#FFFFFF"
                android:textSize="8pt" />
            <TextView
                android:id="@+id/tvTenDangNhap"
                android:text="Ten dang nhap"
                android:layout_gravity="center_vertical"
                android:textColor="#FFFFFF"
                android:textSize="8pt"
                android:paddingStart="16dp"
                android:paddingTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="289dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:paddingStart="16dp"
                android:paddingTop="12dp"
                android:text="Mật khẩu:"
                android:textColor="#FFFFFF"
                android:textSize="8pt" />
            <TextView
                android:id="@+id/tvMatkhau"
                android:text="matkhau"
                android:inputType="textPassword"
                android:layout_gravity="center_vertical"
                android:textColor="#FFFFFF"
                android:textSize="8pt"
                android:paddingStart="16dp"
                android:paddingTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="192dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:paddingStart="16dp"
                android:paddingTop="12dp"
                android:text="Email:"
                android:textColor="#FFFFFF"
                android:textSize="8pt" />
            <TextView
                android:id="@+id/tvEmail"
                android:text="email"
                android:layout_gravity="center_vertical"
                android:textColor="#FFFFFF"
                android:textSize="8pt"
                android:paddingStart="16dp"
                android:paddingTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"/>

        </LinearLayout>
        <TextView
            android:paddingStart="16dp"
            android:paddingTop="12dp"
            android:text="Vai trò:"
            android:textColor="#FFFFFF"
            android:textSize="8pt"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioGroup
                    android:id="@+id/rgVaiTro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rdQuanTriVien"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Quản trị viên"
                        android:textColor="#ffffff"
                        android:layout_marginLeft="10dp"/>

                    <RadioButton
                        android:id="@+id/rdNguoiDung"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Người dùng"
                        android:textColor="#ffffff"
                        android:layout_marginLeft="30dp"/>
                </RadioGroup>

            </LinearLayout>
        </LinearLayout>
        <Button
            android:id="@+id/btnSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:text="Lưu"
            android:textColor="#FFFFFF"
            android:backgroundTint="#333333"
            app:cornerRadius="50dp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>