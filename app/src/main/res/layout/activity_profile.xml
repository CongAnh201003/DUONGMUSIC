<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    tools:context=".Activity.ProfileUserActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/backapp"
            android:padding="15dp">
            <ImageView
                android:src="@drawable/baseline_arrow_back_ios_24"
                android:id="@+id/imgQuayLai"
                android:layout_width="35dp"
                android:layout_height="35dp"/>
            <ImageView
                android:id="@+id/imgAnhDaiDien"
                android:src="@drawable/user"
                android:layout_gravity="center_horizontal"
                android:layout_width="150dp"
                android:layout_height="150dp"/>
            <TextView
                android:id="@+id/tvTenNguoiDung"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:text="Username"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />
            <Button
                android:id="@+id/btnChinhSua"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginStart="16dp"
                android:text="Chỉnh sửa"
                android:textColor="#FFFFFF"
                android:backgroundTint="#333333"
                app:cornerRadius="50dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">
                <TextView
                    android:text="Họ và tên:"
                    android:layout_gravity="center_vertical"
                    android:textColor="#FFFFFF"
                    android:textSize="8pt"
                    android:paddingStart="16dp"
                    android:paddingTop="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/tvTenDangNhap"
                    android:text="Ho và tên"
                    android:layout_gravity="center_vertical"
                    android:textColor="#FFFFFF"
                    android:textSize="8pt"
                    android:paddingStart="16dp"
                    android:paddingTop="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">
                <TextView
                    android:text="Mật khẩu:"
                    android:layout_gravity="center_vertical"
                    android:textColor="#FFFFFF"
                    android:textSize="8pt"
                    android:paddingStart="16dp"
                    android:paddingTop="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/tvMatkhau"
                    android:text="matkhau"
                    android:layout_gravity="center_vertical"
                    android:textColor="#FFFFFF"
                    android:textSize="8pt"
                    android:inputType="textPassword"
                    android:paddingStart="16dp"
                    android:paddingTop="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">
                <TextView
                    android:text="Email:"
                    android:layout_gravity="center_vertical"
                    android:textColor="#FFFFFF"
                    android:textSize="8pt"
                    android:paddingStart="16dp"
                    android:paddingTop="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/tvEmail"
                    android:text="email"
                    android:layout_gravity="center_vertical"
                    android:textColor="#FFFFFF"
                    android:textSize="8pt"
                    android:paddingStart="16dp"
                    android:paddingTop="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1"/>
            </LinearLayout>
            <Button
                android:id="@+id/btnDangXuat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:text="Đăng xuất"
                android:textColor="#FFFFFF"
                android:backgroundTint="#333333"
                app:cornerRadius="50dp" />
            <TextView
                android:id="@+id/tvCanhBaoXoa"
                android:text="Bạn có muốn xóa tài khoản của mình ? có thì nhấp vào đây"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:textColor="#FFFFFF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/btnXoaTaiKhoan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:text="Xóa"
                android:textColor="#FFFFFF"
                android:backgroundTint="#333333"
                app:cornerRadius="50dp" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>