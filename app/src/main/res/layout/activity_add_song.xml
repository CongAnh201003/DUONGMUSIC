<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/backapp"
    android:padding="16dp"
    tools:context=".Activity.AddSongActivity">

    <ImageView
        android:id="@+id/imgBack"
        android:src="@drawable/baseline_arrow_back_ios_24"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:text="Thêm bài hát mới"
        android:textSize="22sp"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/edtTenBaiHat"
        android:hint="Tên bài hát"
        android:textColor="@android:color/white"
        android:textColorHint="#9E9E9E"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/edtTenCaSi"
        android:hint="Tên ca sĩ"
        android:layout_marginTop="8dp"
        android:textColor="@android:color/white"
        android:textColorHint="#9E9E9E"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>



    <EditText
        android:id="@+id/edtLinkBH"
        android:hint="URL file nhạc"
        android:layout_marginTop="8dp"
        android:textColor="@android:color/white"
        android:textColorHint="#9E9E9E"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/edtTheLoai"
        android:hint="Thể loại"
        android:layout_marginTop="8dp"
        android:textColor="@android:color/white"
        android:textColorHint="#9E9E9E"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <!-- KHU VỰC CHỌN ẢNH MỚI -->
    <TextView
        android:text="Ảnh bìa:"
        android:textColor="#9E9E9E"
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="5dp">

        <ImageView
            android:id="@+id/imgPreview"
            android:src="@drawable/ic_launcher_background"
            android:scaleType="centerCrop"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="#555555"/>

        <Button
            android:id="@+id/btnChonAnh"
            android:text="Chọn Ảnh"
            android:layout_marginStart="16dp"
            android:backgroundTint="#A64D79"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <!-- KẾT THÚC KHU VỰC CHỌN ẢNH -->

    <Button
        android:id="@+id/btnThem"
        android:text="Thêm Bài Hát"
        android:layout_marginTop="24dp"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="#A64D79"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>
