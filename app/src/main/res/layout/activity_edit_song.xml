<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/backapp"
    android:padding="16dp">

    <ImageView
        android:id="@+id/imgBackEdit"
        android:src="@drawable/baseline_arrow_back_ios_24"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:text="Cập nhật Bài hát"
        android:textSize="22sp"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/edtTenBaiHatEdit"
        android:hint="Tên bài hát"
        android:textColor="@android:color/white"
        android:textColorHint="#9E9E9E"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/edtTenCaSiEdit"
        android:hint="Tên ca sĩ"
        android:layout_marginTop="8dp"
        android:textColor="@android:color/white"
        android:textColorHint="#9E9E9E"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/edtLinkBHEdit"
        android:hint="URL file nhạc"
        android:layout_marginTop="8dp"
        android:textColor="@android:color/white"
        android:textColorHint="#9E9E9E"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/edtTheLoaiEdit"
        android:hint="Thể loại"
        android:layout_marginTop="8dp"
        android:textColor="@android:color/white"
        android:textColorHint="#9E9E9E"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:text="Ảnh bìa:"
        android:textColor="#9E9E9E"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="5dp">

        <ImageView
            android:id="@+id/imgPreviewEdit"
            android:src="@drawable/ic_launcher_background"
            android:scaleType="centerCrop"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="#555555"/>

        <Button
            android:id="@+id/btnChonAnhEdit"
            android:text="Chọn Ảnh"
            android:layout_marginStart="16dp"
            android:backgroundTint="#A64D79"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <Button
        android:id="@+id/btnLuuThayDoi"
        android:text="Lưu Thay Đổi"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="#A64D79"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>
